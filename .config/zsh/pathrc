#!/bin/bash
APPEND_PATHS=(
	"$HOME/.local/bin"
	"$HOME/.cabal/bin"
	"$HOME/.ghcup/bin"
)

PREPEND_PATHS=(
	"$HOME/.cargo/bin"
	"$HOME/.local/share/pnpm"
)

for loc in "${APPEND_PATHS[@]}"
do
	case ":$PATH:" in
		*:"$loc":*)
			;;
		*)
			export PATH="$PATH:$loc"
			;;
	esac
done

for loc in "${PREPEND_PATHS[@]}" 
do
	case ":$PATH:" in
		*:"$loc":*)
			;;
		*)
			export PATH="$loc:$PATH"
			;;
	esac
done
